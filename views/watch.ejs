<%- include("partials/header.ejs") %>

<div class="hold pt-4">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center">
      <h2 class="latest-title">Latest Match Highlights</h2>
    </div>

    <div class="row mt-4">
      <% videos.forEach(video => { %>
        <div class="col-md-4 mb-4">
          <div class="card video-card d-flex flex-column h-100">
            <div class="video-container flex-grow-1">
              <iframe src="<%= video.video_url %>" frameborder="0" allowfullscreen></iframe>
            </div>
            <div class="card-body mt-auto">
              <h5 class="video-title"><%= video.match_title %></h5>
              <p class="video-meta">VIDEO | <%= video.uploaded_at.toDateString() %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

</div>

<%- include("partials/footer.ejs") %>
