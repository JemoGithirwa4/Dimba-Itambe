<%- include("partials/header.ejs") %>

<header class="clubs-header">
    <h1>Clubs</h1>
    <div class="search-bar">
      <input type="text" class="form-control" placeholder="Search Clubs">
      <button type="button">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </div>
</header>

<div class="container py-5 teams">
    <div class="row g-4">
      <!-- Example Card -->
      <div class="col-md-3">
        <div class="card club-card">
          <img src="/images/logo-1.png" alt="Club Logo" class="card-img-top mx-auto">
          <div class="card-body">
            <h5 class="card-title">Arsenal</h5>
          </div>
          <div class="card-footer">
            <a class="d-flex justify-content-between align-items-center" href="#">View club
                <i class="fa-solid fa-right-long"></i></a>
          </div>
        </div>
      </div>
      <!-- Duplicate for other clubs -->
      <div class="col-md-3">
        <div class="card club-card">
          <img src="/images/logo-2.png" alt="Club Logo" class="card-img-top mx-auto">
          <div class="card-body">
            <h5 class="card-title">Chelsea</h5>
          </div>
          <div class="card-footer">
            <a class="d-flex justify-content-between align-items-center" href="#">View club
                <i class="fa-solid fa-right-long"></i></a>
          </div>
        </div>
      </div>
      <!-- Repeat -->
    </div>
</div>


<%- include("partials/footer.ejs") %>